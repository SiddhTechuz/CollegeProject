extends base
block content
    main.main
        .card-container
            each tour in tours
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
                        h3.heading-tertirary
                            span= tour.name
                        a(href=`/booking/${tour.id}`)
                            button.btn.btn--green.btn--small(data-tour-id=tour.id) Show all Booking detail